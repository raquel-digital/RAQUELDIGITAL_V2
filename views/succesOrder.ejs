        <hr>
        <div class="text-center" id="ovalo">
        <h1 class="text-center">GRACIAS POR TU COMPRA</h1>
        <h1 class="text-center" style="margin-top: 10px;">TU PAGO SE PROCESO DE FORMA EXITOSA</h1>
        </div>
        <h2 class="text-center">A continuacion le dejamos un resumen de su pedido</h2>

        <div class="container mr-5 text-center"> 
            <h1><b> RESUMEN DE COMPRA </b></h1> 
        <table class="table table-striped table-hover">
            <thead>
               <tr>
                   <th>codigo</th>
                   <th>titulo</th>
                   <th>precio unitario</th>
                   <th>cantidad</th>
                   <th>total</th>
               </tr>
              </thead>
              <tbody class="resumen-check-out">
                <% let total = 0; %>
                <% carrito.forEach(e => { %>
                    <tr>
                        <td><img src="<%= e.imagen %>" alt="imagen table" widht="60px" height="60px"></td>
                        <td><%= e.codigo %></td>
                        <td><%= e.titulo %><td>
                        <td><%= e.precio %></td>
                        <td><%= e.cantidad %></td>
                        <td><%= e.cantidad * e.precio %></td>   
                    </tr>
                    <% total += e.cantidad * e.precio %>           
                <% }); %>  
                  
              </tbody>
              <tfoot >
                <tr>
                    <td> <b>EL TOTAL DE SU COMPRA: $ <%= total %></b></td>
                </tr>
          </tfoot>
        </table>
        <div id="datos-compra" data-datos="<%= JSON.stringify(carrito) %>"></div>
        </div>
        <div class="datos-cliente">

        </div>
